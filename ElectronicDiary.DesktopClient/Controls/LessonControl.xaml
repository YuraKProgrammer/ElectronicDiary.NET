<UserControl x:Class="ElectronicDiary.DesktopClient.Controls.LessonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElectronicDiary.DesktopClient.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="250">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="" x:Name="Title" Grid.Row="0" Grid.Column="0"/>
        <TextBlock Text="" x:Name="Homework" Grid.Row="0" Grid.Column="1"/>
        <TextBlock Text="" x:Name="Grade" Grid.Row="0" Grid.Column="2"/>
        <TextBlock Text="" x:Name="StartTime" Grid.Column="0" Grid.Row="1" FontSize="8"/>
        <TextBlock Text="" x:Name="EndTime" Grid.Column="1" Grid.Row="1" FontSize="8"/>
    </Grid>
</UserControl>
